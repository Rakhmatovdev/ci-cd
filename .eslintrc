{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks","jest"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    //add customize rules here as per your project's needs
    "no-unused-vars":"error",
    "no-undef":"error",
    "indent":["error",2],
    "quotes":["error","single"],
    "jest/valid-expect": "error",
    "jest/valid-title": "error"
  }
}  